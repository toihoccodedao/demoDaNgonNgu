<h1>@ViewData["Login"]</h1>

<form asp-action="Login" method="post">
    <div>
        <label>@ViewData["Username"]:</label>
        <input type="text" name="username" required />
    </div>
    <div>
        <label>@ViewData["Password"]:</label>
        <input type="password" name="password" required />
    </div>
    <div>
        <button type="submit">@ViewData["Submit"]</button>
    </div>
</form>

<p>
    <a asp-controller="Account" asp-action="Register">@ViewData["Register"]</a>
</p>

@if (TempData["Message"] != null)
{
    <p style="color: green;">@TempData["Message"]</p>
}
